<suite name="MicroProfile Rest Client TCK" verbose="2" configfailurepolicy="continue" >
    <test name="MicroProfile Rest Client TCK">
        <packages>
            <package name="org.eclipse.microprofile.rest.client.tck.*" />
        </packages>
        <classes>
            <!-- See https://github.com/microprofile/microprofile-rest-client/issues/203 -->
            <class name="org.eclipse.microprofile.rest.client.tck.asynctests.AsyncMethodTest">
                <methods>
                    <exclude name="testAsyncInvocationInterceptorProvider" />
                </methods>
            </class>
            <!-- See https://github.com/microprofile/microprofile-rest-client/issues/402 -->
            <class name="org.eclipse.microprofile.rest.client.tck.cditests.ClientClosedTest">
                <methods>
                    <exclude name=".*" />
                </methods>
            </class>
        </classes>
    </test>
</suite>
