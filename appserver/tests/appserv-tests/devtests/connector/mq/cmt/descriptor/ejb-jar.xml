<ejb-jar>
  <display-name>SimpleMessageJAR</display-name>
  <enterprise-beans>
    <message-driven>
      <display-name>SimpleMessageEJB</display-name>
      <ejb-name>SimpleMessageEJB</ejb-name>
      <ejb-class>com.sun.s1peqe.mq.cmt.excpt.ejb.SimpleMessageBean</ejb-class>
      <transaction-type>Container</transaction-type>
      <message-driven-destination>
        <destination-type>jakarta.jms.Queue</destination-type>
      </message-driven-destination>
    </message-driven>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>SimpleMessageEJB</ejb-name>
        <method-name>onMessage</method-name>
        <method-params>
          <method-param>jakarta.jms.Message</method-param>
        </method-params>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>

