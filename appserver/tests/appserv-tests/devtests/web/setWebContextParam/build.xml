<!DOCTYPE project [
<!ENTITY commonSetup SYSTEM "./../../../config/properties.xml">
<!ENTITY commonBuild SYSTEM "./../../../config/common.xml">
<!ENTITY run SYSTEM "./../../../config/run.xml">
<!ENTITY testproperties SYSTEM "./build.properties">
]>

<project name="webcontainer_unittest" default="all" basedir=".">

    &commonSetup;
    &commonBuild;
    &testproperties;
    &run;

    <target name="all" depends="build,deploy,setup,run,restore,undeploy"/>

    <target name="clean" depends="init-common">
        <antcall target="clean-common"/>
        <delete>
            <fileset dir="." includes="*.class"/>
        </delete>
    </target>

    <target name="compile" depends="clean">
        <antcall target="compile-common">
            <param name="src" value="servlet"/>
        </antcall>
    </target>

    <target name="build" depends="compile">
        <property name="hasWebclient" value="yes"/>
        <antcall target="webclient-war-common">
            <param name="hasWebclient" value="yes"/>
            <param name="webclient.war.classes" value="**/*.class"/>
        </antcall>

        <javac srcdir="." classpath="${mvn.lib.dir}/report-builder.jar"
               includes="WebTest.java"/>

    </target>

    <target name="build-publish-war" depends="build, publish-war-common" />

    <target name="deploy" depends="init-common">
        <antcall target="deploy-war-common"/>
    </target>

    <target name="setup" depends="init-common">
        <antcall target="set-web-context-param">
            <param name="param.name" value="p1"/>
            <param name="param.value" value="A"/>
        </antcall>
        <antcall target="set-web-context-param">
            <param name="param.name" value="p2"/>
            <param name="param.value" value="B"/>
        </antcall>
        <antcall target="set-web-context-param">
            <param name="param.name" value="p3"/>
            <param name="param.value" value="C"/>
        </antcall>
        <antcall target="asadmin-common">
            <param name="admin.command" value="disable"/>
            <param name="operand.props"
                value=" --target ${appserver.instance.name} ${appname}-web"/>
        </antcall>
        <antcall target="asadmin-common">
            <param name="admin.command" value="enable"/>
            <param name="operand.props"
                value=" --target ${appserver.instance.name} ${appname}-web"/>
        </antcall>
    </target>

    <target name="restore" depends="init-common">
        <antcall target="unset-web-context-param">
            <param name="param.name" value="p1"/>
        </antcall>
        <antcall target="unset-web-context-param">
            <param name="param.name" value="p2"/>
        </antcall>
        <antcall target="unset-web-context-param">
            <param name="param.name" value="p3"/>
        </antcall>
    </target>

    <target name="set-web-context-param" depends="init-common">
        <antcall target="asadmin-common">
            <param name="admin.command" value="set-web-context-param"/>
            <param name="operand.props"
                value="--name ${param.name} --value ${param.value} ${appname}-web"/>
        </antcall>
    </target>

    <target name="unset-web-context-param" depends="init-common">
        <antcall target="asadmin-common">
            <param name="admin.command" value="unset-web-context-param"/>
            <param name="operand.props"
                value="--name ${param.name} ${appname}-web"/>
        </antcall>
    </target>

    <target name="run" depends="init-common">
        <java classname="WebTest" fork="true">
          <arg value="${http.host}"/>
          <arg value="${http.port}"/>
          <arg value="${contextroot}"/>
          <classpath>
           <pathelement location="${mvn.lib.dir}/report-builder.jar"/>
           <pathelement location="."/>
         </classpath>
        </java>
    </target>

    <target name="undeploy" depends="init-common">
        <antcall target="undeploy-war-common"/>
    </target>

    <target name="usage">
        <antcall target="usage-common"/>
    </target>
</project>
