<application xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="7"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/application_7.xsd">
    <display-name>connection-factory-definitionApp</display-name>
    <module>
        <java>connection-factory-definition-client.jar</java>
    </module>
    <module>
        <ejb>connection-factory-definition-ejb.jar</ejb>
    </module>
    <module>
        <web>
            <web-uri>connection-factory-definition-web.war</web-uri>
            <context-root>connection-factory-definition</context-root>
        </web>
    </module>

    <connection-factory>
       <description>global-scope resource defined in application DD</description>
       <name>java:global/env/EAR_ConnectionFactory</name>
       <interface-name>jakarta.resource.cci.ConnectionFactory</interface-name>
       <resource-adapter>cfd-ra</resource-adapter>
       <max-pool-size>16</max-pool-size>
       <min-pool-size>4</min-pool-size>
       <transaction-support>LocalTransaction</transaction-support>
       <property>
         <name>testName</name>
         <value>foo</value>
       </property>
     </connection-factory>

    <connection-factory>
       <description>application-scope resource defined in application DD</description>
       <name>java:app/env/EAR_ConnectionFactory</name>
       <interface-name>jakarta.resource.cci.ConnectionFactory</interface-name>
       <resource-adapter>cfd-ra</resource-adapter>
       <max-pool-size>16</max-pool-size>
       <min-pool-size>4</min-pool-size>
       <transaction-support>XATransaction</transaction-support>
       <property>
         <name>testName</name>
         <value>foo</value>
       </property>
     </connection-factory>

</application>
