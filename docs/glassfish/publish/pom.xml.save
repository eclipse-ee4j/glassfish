<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.glassfish.docs</groupId>
        <artifactId>docs</artifactId>
        <version>5.1.0-SNAPSHOT</version>
    </parent>
    <groupId>org.glassfish.docs</groupId>
    <artifactId>publish</artifactId>
    <version>5.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Publish the Eclipse GlassFish Website</name>

    <distributionManagement>
        <site>
            <!--
            <url>scm:git:git@github.com:eclipse-ee4j/glassfish.git</url>
            -->
            <url>scm:git:git@github.com:bshannon/glassfish.git</url>
        </site>
    </distributionManagement>

    <properties>
        <site.output.dir>${project.build.directory}/staging</site.output.dir>
        <maven.site.skip>true</maven.site.skip>
        <maven.deploy.skip>true</maven.deploy.skip>
        <dir.snap>${site.output.dir}/docs/SNAPSHOT</dir.snap>
        <dir.510>${site.output.dir}/docs/5.1.0</dir.510>
        <!-- the "latest" version -->
        <docs.version>SNAPSHOT</docs.version>
    </properties>

    <!--
        This profile is used to publish the entire web site.

        Usage: mvn -Ppublish-site deploy
    -->
    <profiles>
        <profile>
            <id>publish-site</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>get-sources</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <excludes>
                                        META-INF/**
                                    </excludes>
                                    <artifactItems>
                                        <!--
                                            The following item is the top level
                                            web site content.
                                        -->
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>website</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${site.output.dir}
                                            </outputDirectory>
                                        </artifactItem>

                                        <!--
                                            The following items are the current
                                            (under development) versions of the
                                            documentation.
                                        -->
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>add-on-component-development-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>administration-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>application-deployment-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>application-development-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>deployment-planning-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>embedded-server-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>error-messages-reference</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>ha-administration-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>installation-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>performance-tuning-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>quick-start-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>reference-manual</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>release-notes</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>security-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>troubleshooting-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>upgrade-guide</artifactId>
                                            <version>5.1.0-SNAPSHOT</version>
                                            <outputDirectory>
                                                ${dir.snap}
                                            </outputDirectory>
                                        </artifactItem>

                                        <!--
                                            uncomment the following when the
                                            5.1.0 versions are published

                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>add-on-component-development-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>administration-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>application-deployment-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>application-development-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>deployment-planning-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>embedded-server-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>error-messages-reference</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>ha-administration-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>installation-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>performance-tuning-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>quick-start-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>reference-manual</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>release-notes</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>security-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>troubleshooting-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.glassfish.docs</groupId>
                                            <artifactId>upgrade-guide</artifactId>
                                            <version>5.1.0</version>
                                            <outputDirectory>
                                                ${dir.510}
                                            </outputDirectory>
                                        </artifactItem>

                                        -->

                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-publish-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <id>deploy-site</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>publish-scm</goal>
                                </goals>
                                <configuration>
                                    <scmBranch>gh-pages</scmBranch>
                                    <basedir>docs</basedir>
                                    <skipDeletedFiles>false</skipDeletedFiles>
                                    <checkinComment>Update docs</checkinComment>
                                    <skipCheckin>true</skipCheckin>
                                    <!-- <dryRun>true</dryRun> XXX -->
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!--
                        Create a symlink from "latest" to the most recently
                        released version of the docs.
                    -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>create-latest-link</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <delete
                                          file="${site.output.dir}/docs/latest"
                                          />
                                        <symlink
                                          link="${site.output.dir}/docs/latest"
                                          resource="${docs.version}"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <defaultGoal>package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>1.4.1</version>
                <executions>
                    <execution>
                        <id>enforce-versions</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireJavaVersion>
                                    <version>[1.8.0,1.9.0)</version>
                                    <message>You need JDK8 or lower</message>
                                </requireJavaVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
	</plugins>

	<pluginManagement>
	    <plugins>
		<plugin>
		    <groupId>org.apache.maven.plugins</groupId>
		    <artifactId>maven-dependency-plugin</artifactId>
		    <version>3.1.1</version>
		</plugin>
	    </plugins>
	</pluginManagement>
    </build>
</project>
