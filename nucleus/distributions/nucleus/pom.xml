<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.glassfish.main.distributions</groupId>
        <artifactId>nucleus-distributions</artifactId>
        <version>7.0.20-SNAPSHOT</version>
    </parent>

    <artifactId>nucleus-new</artifactId>
    <packaging>glassfish-distribution</packaging>

    <name>Nucleus Distribution</name>

    <dependencies>
        <dependency>
            <groupId>org.glassfish.main.featuresets</groupId>
            <artifactId>nucleus</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.glassfish.main.distributions</groupId>
            <artifactId>nucleus-common</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-domain</id>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
