<!DOCTYPE project [
<!ENTITY commonSetup SYSTEM "./../../../config/properties.xml">
<!ENTITY commonBuild SYSTEM "./../../../config/common.xml">
]>

<project name="webcontainer_unittest" default="all" basedir=".">

    &commonSetup;
    &commonBuild;

    <target name="all" depends="compile,run"/>

    <target name="clean">
        <delete file="WebTest.class" />
    </target>
       
    <target name="compile">
        <javac
            srcdir="."
            classpath="${env.APS_HOME}/lib/reportbuilder.jar;${env.S1AS_HOME}/modules/jakarta.el.jar"
            includes="WebTest.java"/>

    </target> 

    <target name="run" depends="compile">
        <java classname="WebTest">
          <classpath>
           <pathelement location="${env.APS_HOME}/lib/reportbuilder.jar"/>
           <pathelement location="${env.S1AS_HOME}/modules/jakarta.el.jar"/>
           <pathelement location="."/>
         </classpath>
        </java>
    </target>
 
    <target name="usage">
        <antcall target="usage-common"/>
    </target>
</project>
