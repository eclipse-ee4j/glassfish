    <artifactId>web-sse</artifactId>
    <packaging>glassfish-jar</packaging>

    <name>Server-Sent Events</name>
    <description>
        Server-Sent Events specification (http://dev.w3.org/html5/eventsource)         defines an JavaScript API for clients for receiving push notifications         from a server on a HTTP connection.

        This module has an API and implementation for server components
        to send such event notifications.
    </description>

    <developers>
        <developer>
            <id>jitu</id>
            <name>Jitendra Kotamraju</name>
            <organization>Oracle</organization>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>jakarta.servlet</groupId>
            <artifactId>jakarta.servlet-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.weld</groupId>
            <artifactId>weld-osgi-bundle</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>jakarta.inject</groupId>
            <artifactId>jakarta.inject-api</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
