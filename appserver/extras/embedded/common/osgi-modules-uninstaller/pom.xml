<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.glassfish.main.extras</groupId>
    <artifactId>glassfish-embedded-common</artifactId>
    <version>8.0.0-JDK17-M7</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

    <artifactId>osgi-modules-uninstaller</artifactId>

    <name>GlassFish OSGI Modules Uninstaller</name>

    <dependencies>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi.core</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.main.core</groupId>
            <artifactId>glassfish</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-Activator>org.glassfish.uberjar.osgimodulesuninstaller.GlassFishOSGiModulesUninstaller</Bundle-Activator>
                        <Bundle-SymbolicName>org.glassfish.uberjar.osgi-modules-uninstaller</Bundle-SymbolicName>
                        <Export-Package>!*</Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
