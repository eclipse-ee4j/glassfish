<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.glassfish.main.tests</groupId>
        <artifactId>tests</artifactId>
        <version>9.0.0-SNAPSHOT</version>
    </parent>

    <groupId>org.glassfish.main.tests.application-tests</groupId>
    <artifactId>application-tests</artifactId>
    <packaging>pom</packaging>

    <name>Application Tests: Parent</name>

    <modules>
        <module>security</module>
    </modules>

    <properties>
        <glassfish.root>${project.build.directory}</glassfish.root>
        <glassfish.directoryName>glassfish9</glassfish.directoryName>
        <glassfish.home>${glassfish.root}/${glassfish.directoryName}</glassfish.home>

        <jacoco.includes>org/glassfish/**\:com/sun/enterprise/**</jacoco.includes>

        <omnifish.arquillian.version>2.1.2</omnifish.arquillian.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- Glassfish used for testing -->
            <dependency>
                <groupId>org.glassfish.main.distributions</groupId>
                <artifactId>glassfish</artifactId>
                <version>${glassfish.version}</version>
                <type>zip</type>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>org.jboss.arquillian</groupId>
                <artifactId>arquillian-bom</artifactId>
                <version>1.10.0.Final</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
            <dependency>
                <groupId>org.jboss.arquillian.junit5</groupId>
                <artifactId>arquillian-junit5-container</artifactId>
                <version>1.10.0.Final</version>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>ee.omnifish.arquillian</groupId>
                <artifactId>arquillian-glassfish-server-managed</artifactId>
                <version>${omnifish.arquillian.version}</version>
                <scope>test</scope>
            </dependency>

            <dependency>
                <groupId>org.jboss.shrinkwrap.resolver</groupId>
                <artifactId>shrinkwrap-resolver-impl-maven</artifactId>
                <version>3.3.4</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.jboss.shrinkwrap.resolver</groupId>
                <artifactId>shrinkwrap-resolver-api-maven</artifactId>
                <version>3.3.4</version>
                <scope>test</scope>
            </dependency>
            <dependency>
            <groupId>org.jboss.shrinkwrap</groupId>
                <artifactId>shrinkwrap-api</artifactId>
                <version>1.2.6</version>
            </dependency>
            <dependency>
                <groupId>org.jboss.shrinkwrap</groupId>
                <artifactId>shrinkwrap-impl-base</artifactId>
                <version>1.2.6</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.glassfish.main</groupId>
            <artifactId>glassfish-jul-extension</artifactId>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <!-- To disable checking extracted sources -->
                <plugin>
                    <artifactId>maven-checkstyle-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>checkstyle</id>
                            <phase>disabled</phase>
                        </execution>
                        <execution>
                            <id>checkstyle-poms</id>
                            <phase>disabled</phase>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <!-- To disable bringing license files -->
            <plugin>
                 <artifactId>maven-dependency-plugin</artifactId>
                 <executions>
                     <execution>
                        <id>unpack-resource</id>
                        <phase>disable</phase>
                     </execution>
                 </executions>
            </plugin>

            <!-- Block our annotation processing to be inherited -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-hk2-config</id>
                        <phase>disable</phase>
                    </execution>
                    <execution>
                        <id>process-annotations</id>
                        <phase>disable</phase>
                    </execution>
                </executions>
            </plugin>

            <!-- To disable usage of our default MANIFEST.MF -->
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration combine.self="override">
                </configuration>
            </plugin>

            <!-- Deploy this pom, but no children except ... -->
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-deploy</id>
                        <phase>disabled</phase>
                    </execution>
                    <execution>
                        <id>default-deploy-tck</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                        <inherited>false</inherited>
                        <configuration>
                            <!-- To keep consistency with nucleus-parent -->
                            <skip>${deploy.skip}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
